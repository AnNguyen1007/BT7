<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile"
    android:orientation="vertical"
    android:background="@drawable/bg_color"
    android:id="@+id/lnTaiKhoan">


    <TextView
        android:elevation="-2dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fontFamily="@font/press_start_2p"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="USER INFORMATION"
        android:textColor="#2A056C"
        android:textSize="23dp" />

    <LinearLayout
        android:id="@+id/lnContent"
        android:layout_width="match_parent"
        android:background="@drawable/bg_color"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="8"
        android:layout_marginTop="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ava"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/a665d2d394cb53950ada" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/editAnh"
                android:fontFamily="@font/akaya_telivigala"
                android:gravity="center_vertical"
                android:text="Change avatar"
                android:textSize="18dp" />

            <ImageButton
                android:id="@+id/editAnh"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:backgroundTint="#8FD8C7"
                android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                tools:ignore="SpeakableTextPresentCheck" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            android:background="#335A5A5A"
            android:layout_marginHorizontal="8dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:fontFamily="@font/akaya_telivigala"
                android:gravity="center_vertical"

                android:text="Account"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/vUsername"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:fontFamily="@font/akaya_telivigala"
                android:gravity="center_vertical"

                android:text="Kanisnoluv"
                android:textSize="18dp" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            android:background="#335A5A5A"
            android:layout_marginHorizontal="8dp"/>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:fontFamily="@font/akaya_telivigala"
                android:gravity="center_vertical"
                android:text="Full name"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/vFullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:layout_toStartOf="@+id/editTen"
                android:fontFamily="@font/akaya_telivigala"
                android:text="Nguyen Tien An"
                android:textSize="18dp" />

            <ImageButton
                android:id="@+id/editTen"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:backgroundTint="#8FD8C7"
                android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                tools:ignore="SpeakableTextPresentCheck" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            android:background="#335A5A5A"
            android:layout_marginHorizontal="8dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:fontFamily="@font/akaya_telivigala"
                android:gravity="center_vertical"
                android:text="Date "
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/vDoB"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/editNgaySinh"
                android:fontFamily="@font/akaya_telivigala"
                android:gravity="center_vertical"
                android:text="10/07/2002"
                android:textSize="18dp" />

            <ImageButton
                android:id="@+id/editNgaySinh"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:backgroundTint="#8FD8C7"
                android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                tools:ignore="SpeakableTextPresentCheck" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            android:background="#335A5A5A"
            android:layout_marginHorizontal="8dp"/>

        <!--        <LinearLayout-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="50dp"-->
        <!--            android:orientation="horizontal"-->
        <!--            android:layout_marginTop="5dp"-->
        <!--            android:paddingLeft="12dp">-->
        <!--            <TextView-->
        <!--                android:layout_width="180dp"-->
        <!--                android:layout_height="match_parent"-->
        <!--                android:text="Email "-->
        <!--                android:textSize="18dp"-->
        <!--                android:textColor="@color/black"-->
        <!--                android:gravity="center_vertical"/>-->

        <!--            <TextView-->
        <!--                android:id="@+id/vEmail"-->
        <!--                android:layout_width="wrap_content"-->
        <!--                android:layout_height="match_parent"-->
        <!--                android:layout_marginRight="50dp"-->
        <!--                android:gravity="center_vertical"-->
        <!--                android:lines="2"-->
        <!--                android:text="111@gmail.com"-->
        <!--                android:textColor="@color/grey"-->
        <!--                android:textSize="18dp" />-->

        <!--        </LinearLayout>-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:text="Email "
                android:textColor="@color/black"
                android:fontFamily="@font/akaya_telivigala"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/vEmail"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/editEmail"
                android:gravity="center_vertical"
                android:fontFamily="@font/akaya_telivigala"
                android:text="annguyenfc@gmail.com"
                android:textSize="18dp" />

            <ImageButton
                android:id="@+id/editEmail"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                android:backgroundTint="#8FD8C7"
                tools:ignore="SpeakableTextPresentCheck" />

            <View
                android:id="@+id/view3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            android:background="#335A5A5A"
            android:layout_marginHorizontal="8dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:fontFamily="@font/akaya_telivigala"
                android:gravity="center_vertical"
                android:text="Sex:"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/vGender"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/editGioiTinh"
                android:fontFamily="@font/akaya_telivigala"
                android:gravity="center_vertical"
                android:text="Man"
                android:textSize="18dp" />

            <ImageButton
                android:id="@+id/editGioiTinh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:backgroundTint="#8FD8C7"
                android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            android:background="#335A5A5A"
            android:layout_marginHorizontal="8dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:fontFamily="@font/akaya_telivigala"
                android:gravity="center_vertical"
                android:text="Phone number:"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/vPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/editSDT"
                android:fontFamily="@font/akaya_telivigala"
                android:gravity="center_vertical"
                android:text="0123456789"
                android:textSize="18dp" />

            <ImageButton
                android:id="@+id/editSDT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:backgroundTint="#8FD8C7"
                android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            android:background="#335A5A5A"
            android:layout_marginHorizontal="8dp"/>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_color"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDangXuat"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/radius"
                android:backgroundTint="#69007C"
                android:fontFamily="@font/akaya_telivigala"
                android:radius="20dp"
                android:text="ĐĂNG XUẤT"
                android:textAlignment="center"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>